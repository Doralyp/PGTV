<div class="container">

  <table class="table">
    <tr>
      <th>Time</th>
      <th>Sunday</th>
      <th>Monday</th>
      <th>Tuesday</th>
      <th>Wednesday</th>
      <th>Thursday</th>
      <th>Friday</th>
      <th>Saturday</th>
    </tr>
    <%shows.each do |time, series|%>
      <tr>
        <td><%= time %></td>
        <td><%= series.find {|serie| serie.air_day == "Sunday"}.title if series.find {|serie| serie.air_day == "Sunday"} %></td>
        <td><%= series.find {|serie| serie.air_day == "Monday"}.title if series.find {|serie| serie.air_day == "Monday"} %></td>
        <td><%= series.find {|serie| serie.air_day == "Tuesday"}.title if series.find {|serie| serie.air_day == "Tuesday"} %></td>
        <td><%= series.find {|serie| serie.air_day == "Wednesday"}.title if series.find {|serie| serie.air_day == "Wednesday"} %></td>
        <td><%= series.find {|serie| serie.air_day == "Thursday"}.title if series.find {|serie| serie.air_day == "Thursday"} %></td>
        <td><%= series.find {|serie| serie.air_day == "Friday"}.title if series.find {|serie| serie.air_day == "Friday"} %></td>
        <td><%= series.find {|serie| serie.air_day == "Saturday"}.title if series.find {|serie| serie.air_day == "Saturday"} %></td>
      </tr>
    <%end%>
  </table>
</div>
</div>
