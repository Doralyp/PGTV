<div class="container">
  <h2><%= show.title %></h2>
  <h5><%= show.description %></h5>
  <h6>Watch it on <%= show.channel.name%> on <%=show.air_day%>s at <%=show.air_time%></h6>
  <p><%= show.genre.name %></p>
</div>

Rating: <%= show.rating %>

<%if user_id%>
  <% if user.shows.where(id: show.id).count != 0 %>
    <form action="/users/:id" method="post">
      <input type='hidden' name='_method' value='delete'>
      <input type='submit' name='show[<%= show.id%>]' value='Delete from my shows'>
    </form>
  <%else%>
    <form action="/users/:id" method="post">
      <input type='hidden' name='_method' value='put'>
      <input type='submit' name='show[<%= show.id%>]' value='Add to my shows'>
    </form>
  <%end%>
<%end%>
